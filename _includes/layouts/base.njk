{% raw %}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>{{ metadata.title }}{% if title %} – {{ title }}{% endif %}</title>
  <meta name="description" content="{{ metadata.description }}">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Styles -->
  <link rel="stylesheet" href="/css/hf.css">
</head>

<body>
  <!-- HERO + DESTINATION TILES -->
  <section class="hero">
    <h1>{{ metadata.title }}</h1>
    <p class="tagline">{{ metadata.description }}</p>

    <div class="tiles">
      <a class="tile" href="/bergen/">Bergen</a>
      <a class="tile" href="/lisbon/">Lisbon</a>
    </div>
  </section>

  <!-- MAIN CONTENT -->
  <main id="main">
    {{ content | safe }}
  </main>

  <!-- FOOTER -->
  <footer class="site-footer">
    <small>&copy; {{ "now" | date: "%Y" }} Hide & Feast · Value Meets Soul</small>
  </footer>
</body>
</html>
{% endraw %}
