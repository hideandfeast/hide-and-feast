---
title: Home
layout: layouts/base.njk
---
<section class="card-grid">
  {% for post in collections.stays | reverse %}
    <article class="card">
      <a href="{{ post.url }}">
        <img src="{{ post.data.image }}" alt="">
        <span class="cat-pill">Stay</span>
        <h2>{{ post.data.title }}</h2>
      </a>
    </article>
  {% endfor %}
</section>
